{
  "env": {
    "browser": true,
    "es6": true,
    "googleappsscript/googleappsscript": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-var": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-implicit-globals": "error",
    "no-unreachable": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "error",
    "no-eval": "error"
  },
  "plugins": [
    "googleappsscript"
  ]
}